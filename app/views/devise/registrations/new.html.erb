<div class='well' id='signup_box'>
  <div class='row'>
    <div class='span3'>
      <br>
      <% content_for :head do %>
        <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
      <% end %>
      <div id="stripe_error" class="alert alert-error" style="display:none" >
      </div>
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class     => 'form-vertical' }) do |f| %>
        <%= hidden_field_tag 'plan', params[:plan] %>
        <%= f.error_notification %>
        <%= display_base_errors resource %>
        <%= f.input :name, label:false, :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-user"></i></span><%= f.input_field :name, :required => true, :placeholder => 'Name' %>
        <% end %>
        <%= f.input :email, label:false, :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-envelope"></i></span><%= f.input_field :email, :required => true, :placeholder => 'Email address'  %>
        <% end %>     
    
        <%= f.input :password, label:false, :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-lock"></i></span><%= f.input_field :password, :required => true, :placeholder => 'Password'  %>
        <% end %>  
    
        <%= f.input :password_confirmation, label:false, :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-lock"></i></span><%= f.input_field :password_confirmation, :required => true, :placeholder => 'Confirm password'  %>
        <% end %>
    
        <%= f.submit "Sign Up", :class => 'btn btn-success span2' %> or
        <%= link_to "Sign In", new_session_path(resource_name), :class => 'btn btn' %><br />
        <br />
        <%= render :partial => "devise/shared/links" %>
      <% end %>
    </div>
    <div class='span4'> 
      <br>
      <br> 
      <ol>
      <h4>  
        <li>Build your release plan in a single location</li><br>
        <li>Invite colleagues to participate in the planning process</li><br>
        <li>Connect your plan to third-party monitoring tools</li><br>
        <li>Track the success of your feature releases</li>
      </h4>  
      </ol>
    </div>
  </div>    
</div> 