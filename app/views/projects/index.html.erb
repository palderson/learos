<div class='inline'>
  <h3>You have <%= @projects.count %> active project
  <% if can? :create, current_user %>
    <%= link_to 'New Project', new_project_path, :class => 'btn btn-success pull-right', :style => 'margin-right:10px', id: "new_project_link", remote: true %>
  <% end %></h3>
</div>
<br>  
<div id='project_container' style='padding:20px'>
    <% @projects.each do |project| %>
      <%= link_to project.title, project %><br>
      <%= truncate(project.overview.elevator_pitch, :ommision => "...", :length => 100) %><br>
      <span style='float:right'>  
        <%= link_to "Archive", project_archive_path(project) %> | 
        <%= link_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure?'} %>
      </span>
      <br>
    <% end %>    
</div>  



<p><%= @projects_info %></p>
<p><%= @trial_info %></p>
<% if @show %>
  <p><%= link_to "Upgrade your account", edit_user_subscription_path(current_user, current_user.subscription) %>
<% end %>
<br>
<%= link_to 'Archives', archives_path %>
<br>

<% unless @collaborations.empty? %>
  <div id='collaborations_projects_list'>
    <table class='table table-striped projects_list'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Actions</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @collaborations.each do |project| %>
          <tr>
            <td><%= link_to project.title, project %></td>
            <td>
              <%= link_to "Show", project_path(project), class: 'btn btn-mini' %>
            </td>
            <td><span class="label label-important">Collaborator</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
