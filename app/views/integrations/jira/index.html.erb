<h1>JIRA Connections</h1>

<% current_user.jiras.each do |jira| %>
  <div class="well">
  <% unless jira.verified %>
  <%= simple_form_for :jira, url: integrations_jira_verify_path, html: { class: 'form-inline' } do |f| %>
    <%= f.input :oauth_verifier, label: 'Verification Code' %>
    <%= f.input :connect_to, as: :hidden, input_html: { value: jira.id } %>
    <div class="control-group">
      <div class="controls">
        <%= f.button :submit, "Verify", class: 'btn btn-success span2' %>
      </div>
    </div>
  <% end %>
  <p>or</p>
  <% end %>
  <%= link_to "Disconnect from #{jira.site_url}", integrations_jira_path(jira), method: :delete, class: 'btn btn-danger' %>
  </div>
<% end %>

<%= link_to "New JIRA Connection", new_integrations_jira_path %>
