<% [:ideal_client, :applicable_client_percentage, :client_motivations, :target_budget, :purchase_decision_maker, :product_user].each do |field| %>
  <% unless @project.profile.send(field) == '#removed' %>
    <div>
      <p><%= field.to_s.titleize %></p>
      <p><%= @project.profile.send(field) %></p>
    </div>
    <br>
  <% end %>
<% end %>

<% @project.profile.data.try(:each) do |key, value| %>
  <div>
    <p><%= key.titleize %></p>
    <%= value%>
  </div>
  <br />
<% end %>

<% if can? :edit, @project %>
  <%= link_to 'Edit', edit_project_path(@project) %>
<% end %>

<%= render partial: 'comments/form', locals: { project: @project, nested: :profile } %>
